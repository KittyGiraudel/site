" %}

<article class="Post">
  {% if related %}
    {% assign related_post = '' %}
    {% for post in collections.posts %}
      {% if post.url == related %}
        {% assign related_post = post %}
      {% endif %}
    {% endfor %}

    <p class="PostDate">
      {{ related_post.date | time }} Â· From <a href="{{ related }}">{{ related_post.data.title }}</a>
    </p>
  {% endif %}

  {% include "ad.html" %}

  {{ content }}
</article>

